# Server binding (defaults shown)
APP_SERVER__HOST=0.0.0.0
APP_SERVER__PORT=8080

# Storage backend: use "mongo" or "sqlite"
APP_DATABASE__BACKEND=mongo

# MongoDB configuration (required when backend is mongo)
APP_DATABASE__MONGODB__URI=mongodb://localhost:27017
APP_DATABASE__MONGODB__DATABASE=clockin

# SQLite configuration (required when backend is sqlite)
# APP_DATABASE__SQLITE__PATH=./data/clockin.sqlite

# Optional logging level for tracing subscriber
RUST_LOG=info
